<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context="edu.chapman.cpsc356.spendingfriend.fragments.SummaryFragment">

    <TextView
        android:id="@+id/tv_summary_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        tools:text="@string/summary_header" />

    <LinearLayout
        android:id="@+id/ll_monthly_spending_cap_summary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_summary_header"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_monthly_spending_header"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_monthly_spending"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_monthly_income_summary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_monthly_spending_cap_summary"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_monthly_income_header"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_monthly_income"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_monthly_total_savings_summary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_monthly_income_summary"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_monthly_total_savings_header"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_total_savings"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
